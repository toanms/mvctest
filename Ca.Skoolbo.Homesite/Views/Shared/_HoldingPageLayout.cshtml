<body>

    <div class="container">
        <div class="row">
            <img src="~/Images/HoldingPage/holdingpage.jpg" class="img-responsive bg-content"/>
            @RenderBody()
        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/jqueryval")

    <script src="~/Scripts/mvc-validation-with-tooltip.js"></script>

    @Scripts.Render("~/bundles/bootstrap")
    <script>
        $(window).load(function () {
            resizeContent();
        });
        $(window).on('resize', function () {
            resizeContent();
        });
        $(document).resize(function () {
            resizeContent();
        });
        function resizeContent() {

            var maxHeight = 825;
            var documentSize = $(document).height();
            if (documentSize > maxHeight) {
                documentSize = maxHeight;
            }
            $(".container").height(documentSize);
        }
    </script>

    @RenderSection("scripts", required: false)

</body>
