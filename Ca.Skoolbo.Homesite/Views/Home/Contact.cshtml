            <a class="block-overflow" href="mailto:@(WebConfigHelper.EmailInfo)"> <img src="~/Images/Contact/email.jpg"> @(WebConfigHelper.EmailInfo)</a>
        </h2>
        <h2>
            <a class="block-overflow" href="tel:@(WebConfigHelper.PhoneNumber)"> <img src="~/Images/phone.png"> @(WebConfigHelper.PhoneNumber)</a>
        </h2>
    </div>

</div>
