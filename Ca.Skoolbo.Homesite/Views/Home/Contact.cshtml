@using Ca.Skoolbo.Homesite.Helpers.Configs
@{
    ViewBag.Title = "Contact";
    ViewBag.ActiveMenu = "Contact";
}
@section styles
{
    <link href="~/Content/custom/contact.css?v=3" rel="stylesheet" />
}
<div class="col-lg-12 margin-top-10">
  

    <div class="row">
        <div class="col-md-10 col-md-offset-1 brochure-bg contact-top">
            <h1 class="text-center text-bold"> Skoolbo CA </h1>
            <p class="text-center text-bold address"> 3877 Grand View Blvd</p>
            <p class="text-center text-bold address">Los Angeles, CA 90066,</p>
            <p class="text-center text-bold address">United States</p>
            
            <div class="clearfix"></div>
            <div class="clear-float col-lg-6 center-block">
                <div class="row margin-bottom-10 margin-top-20">
                    <div class="col-md-4">
                        <a class="block-overflow text-right" href="https://www.facebook.com/SkoolboCA" target="_bank">
                            <img src="~/Images/Contact/facebook.png">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <h3>
                            <a class="block-overflow" href="https://www.facebook.com/SkoolboCA" target="_bank">
                                <strong>facebook.com/SkoolboCA</strong>
                            </a>
                        </h3>
                    </div>
                </div>
                <div class="row margin-bottom-10">
                    <div class="col-md-4">
                        <a class="block-overflow text-right" href='@("https://twitter.com/@SkoolboCA")' target="_bank">
                            <img src="~/Images/Contact/twitter.png">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <h3>
                            <a class="block-overflow" href='@("https://twitter.com/@SkoolboCA")' target="_bank">
                                <strong>@@SkoolboCA</strong>
                            </a>
                        </h3>
                    </div>
                </div>
                <div class="row margin-bottom-10">
                    <div class="col-md-4">
                        <a class="block-overflow text-right" href="mailto:@(WebConfigHelper.EmailInfo)">
                            <img src="~/Images/Contact/email.jpg">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <h3>
                            <a class="block-overflow" href="mailto:@(WebConfigHelper.EmailInfo)">
                                <strong>@(WebConfigHelper.EmailInfo)</strong>
                            </a>
                        </h3>
                    </div>
                </div>
                <div class="row margin-bottom-10">
                    <div class="col-md-4">
                        <a class="block-overflow text-right" href="tel:@(WebConfigHelper.PhoneNumber)">
                            <img src="~/Images/phone.png">
                        </a>
                    </div>
                    <div class="col-md-8">
                        <h3>
                            <a class="block-overflow" href="tel:@(WebConfigHelper.PhoneNumber)">
                                @(WebConfigHelper.PhoneNumber)
                            </a>
                        </h3>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-3 region-item">
            <div class="region-wrapper">
                <h3>
                    <a href="http://www.skoolbo.com.au" target="_blank"><strong>AUSTRALIA</strong></a>
                </h3>

                <div class="region-contact">
                    <a class="region-web" href="http://www.skoolbo.com.au" target="_blank">@*<i class="glyphicon glyphicon-globe"></i>*@http://www.skoolbo.com.au</a>

                </div>
                <br>
            </div>
        </div>
        <div class="col-md-3 region-item">
            <div class="region-wrapper">
                <h3>
                    <a href="http://www.skoolbo.co.nz" target="_blank"><strong>NEW ZEALAND</strong></a>
                </h3>

                <div class="region-contact">
                    <a href="http://www.skoolbo.co.nz" target="_blank">http://www.skoolbo.co.nz</a>

                </div>

                <br>
            </div>
        </div>
        <div class="col-md-3 region-item">
            <div class="region-wrapper">
                <h3>
                    <a href="http://smartestsingapore.com" target="_blank"><strong>SINGAPORE</strong></a>
                </h3>

                <div class="region-contact">
                    <a href="http://www.smartestsingapore.com" target="_blank">http://www.smartestsingapore.com</a>

                </div>
                <br>

            </div>
        </div>
        <div class="col-md-3 region-item">
            <div class="region-wrapper">
                <h3>
                    <a href="http://www.skoolbo.co.uk" target="_blank"><strong>UNITED KINGDOM</strong></a>
                </h3>

                <div class="region-contact">
                    <a href="http://www.skoolbo.co.uk" target="_blank">http://www.skoolbo.co.uk</a>

                </div>
                <br>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 region-item center-block">
            <div class="region-wrapper">
                <h3>
                    <a href="http://www.skoolbo.com" target="_blank"><strong>UNITED STATES</strong></a>
                </h3>

                <div class="region-contact">
                    <a href="http://www.skoolbo.com" target="_blank">http://www.skoolbo.com</a>

                </div>
                <br>
            </div>
        </div>
    </div>
</div>
