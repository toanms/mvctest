{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "lib": [ "es2015", "dom" ],
    "suppressExcessPropertyErrors": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules/*",
    "**/*-aot.ts"
  ],
  "compileOnSave": true
}
